# Hoist React and React-DOM to avoid duplicate instances
# This prevents the "Invalid hook call" error (React error #438)
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*@tanstack*
public-hoist-pattern[]=*@trpc*

# Enable strict peer dependencies
strict-peer-dependencies=false

# Shamefully hoist to resolve React context issues
shamefully-hoist=true



